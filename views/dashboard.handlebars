
 <section class="user-card-wrapper">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100"
        height="100"
        fill="currentColor"
        class="bi bi-person-circle"
        viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z">
            </path>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
            ></path>
    </svg>
    <div class="card">
        <div class="card-header">
              <h3>{{myUser.username}}'s Profile</h3>
        </div>
      
    </div>
</section>
<section class="card-body">
    <h4>Post a Blog</h4>
        <section class="flex-row justify-center">
            <form class = "create-post">
                <input type="text" id="content" placeholder="Your Goal">
                <input type="text" id="finish-date" placeholder="Finish Date"> <!-- eventually add drop down-->
                <input type="text" id="completed" placeholder="Completed?"> <!-- eventually add drop down-->
                <button type="submit" id="submit-btn">Submit</button>
            </form>  
        </section>


{{#if content.length}} . <!-- need to console log and test to get correct name-->
<section>
    <div class="col-md-6 blog-list">
        <h3>All Your Blogs:</h3>
            {{#each dbGoalData as |goal|}}
            {{> my-goal-details }} <!-- need to create a partial -->
            {{/each}}
    </div>
{{/if}}
</section>
</section>

<script src="/js/user.js"></script>